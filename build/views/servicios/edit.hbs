<div class="container p-4">
    <div class="row">
        <div class="col-m-4 mx-auto">
            <div class="card">
                <div class="card-header bg-dark text-light">Editar Servicios</div>
                <div class="card-body">
                    <form action="/servicios/edit/{{servicio.id}}" method="POST">
                        <div class="form-group">
                            <div class="form-group">
                                <label for="titulo">Nombre</label>
                                <input type="text" value="{{servicio.titulo}}" class="form-control" id="titulo" name="titulo" placeholder="Ejemplo"
                                    autofocus>
                            </div>
                            <div class="form-group">
                                <label for="descripcion">Descripcion</label>
                                <textarea class="form-control" id="descripcion" name="descripcion"
                                    placeholder="Descripcion mostrada en el sitio" rows="3">{{servicio.descripcion}}</textarea>
                            </div>
                            <div class="form-group">
                                <label for="fotos">URL de la images</label>
                                <input type="text" value="{{servicio.fotos}}" class="form-control" id="fotos" name="fotos"
                                    placeholder="https://img.com/imagen.jpg">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block btn-dark">Actualizar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>